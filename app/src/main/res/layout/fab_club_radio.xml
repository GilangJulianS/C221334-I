<?xml version="1.0" encoding="utf-8"?>
<com.getbase.floatingactionbutton.FloatingActionsMenu
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:fab_addButtonColorNormal="@color/colorAccent"
	app:fab_addButtonColorPressed="@color/colorAccentDark">

	<com.getbase.floatingactionbutton.FloatingActionButton
		android:id="@+id/fab_upload"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_backup_white_24dp"
		app:fab_colorNormal="@color/colorAccent"
		app:fab_colorPressed="@color/colorAccentDark"
		app:fab_colorDisabled="@color/colorAccentDark" />

	<com.getbase.floatingactionbutton.FloatingActionButton
		android:id="@+id/fab_mix"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_library_music_white_24dp"
		app:fab_colorNormal="@color/colorAccent"
		app:fab_colorPressed="@color/colorAccentDark"
		app:fab_colorDisabled="@color/colorAccentDark" />

	<com.getbase.floatingactionbutton.FloatingActionButton
		android:id="@+id/fab_playlist"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_queue_music_white_24dp"
		app:fab_colorNormal="@color/colorAccent"
		app:fab_colorPressed="@color/colorAccentDark"
		app:fab_colorDisabled="@color/colorAccentDark" />

</com.getbase.floatingactionbutton.FloatingActionsMenu>
