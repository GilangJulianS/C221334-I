<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/minimized_player"
	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="match_parent"
  	android:layout_height="wrap_content"
	android:padding="10dp"
	android:gravity="center_vertical"
	android:background="@color/colorPrimaryDefault"
	android:orientation="horizontal">
	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<ImageView
			android:id="@+id/coverMiniPlayer"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:scaleType="centerCrop"
			android:src="@drawable/background_login"/>
		<ProgressBar
			android:id="@+id/progressbar"
			android:layout_width="40dp"
			android:layout_height="40dp"
			style="@android:style/Widget.Holo.Light.ProgressBar.Inverse"
			android:visibility="visible"/>
	</FrameLayout>


	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_weight="1"
		android:layout_height="match_parent"
		android:layout_marginLeft="10dp"
		android:gravity="center_vertical"
		android:orientation="vertical">

		<TextView
			android:id="@+id/txtTitleMiniPlayer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textStyle="bold"
			android:textSize="16sp"
			android:singleLine="true"
			android:ellipsize="marquee"
			android:textColor="#fff"
			android:text="The Dandees"/>

		<TextView
			android:id="@+id/txt_artistMiniPlayer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="5dp"
			android:textSize="12sp"
			android:singleLine="true"
			android:ellipsize="marquee"
			android:textColor="#fff"
			android:text="Prambors FM Jakarta"/>

	</LinearLayout>

	<ImageButton
		android:id="@+id/btn_play"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/btn_flat_transparent_oval"
		android:src="@drawable/ic_play_arrow_white_36dp"/>


	<ImageButton
		android:id="@+id/btn_next"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dp"
		android:background="@drawable/btn_flat_transparent_oval"
		android:src="@drawable/ic_skip_next_white_36dp"/>



</LinearLayout>
